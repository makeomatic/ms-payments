{
    "$id": "agreement.create",
    "type": "object",
    "required": [
        "owner",
        "agreement"
    ],
    "properties": {
        "owner": {
            "type": "string",
            "minLength": 1
        },
        "agreement": {
            "$ref": "agreement#"
        },
        "trialDiscount": {
            "type": "interger",
            "minimum": 0,
            "maximum": 100,
            "default": 0
        },
        "trialCycle": {
            "type": "integer",
            "minimum": 1,
            "default": 12
        }
    },
    "additionalProperties": false
}
