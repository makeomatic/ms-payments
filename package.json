    "eslint-plugin-mocha": "^2.0.0",
    "isparta": "^4.0.0",
    "istanbul": "^0.4.2",
    "json": "^9.0.3",
    "latest-version-cli": "^1.0.0",
    "mocha": "^2.3.3",
    "nightmare": "github:segmentio/nightmare",
    "nock": "^7.2.2",
    "semantic-release": "^4.3.5"
  },
  "release": {
    "verifyConditions": []
  },
