{
  "name": "ms-payments",
  "description": "Core of the microservice for handling payments",
  "main": "./lib/index.js",
  "scripts": {
    "compile": "./node_modules/.bin/babel -d ./lib ./src",
    "prepublish": "npm run compile",
    "test": "DEBUG=nightmare* ./test/docker.sh",
    "compile-test": "./node_modules/.bin/babel -d ./compiled-test ./test && cd ./test && rsync -rR ./ ../compiled-test --exclude=*.js",
    "start": "node ./bin/mservice.js | ./node_modules/.bin/bunyan -o short",
    "generate-docs": "jsdoc ./src -d ./docs",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/makeomatic/ms-payments.git"
  },
  "author": "Dmitry Gorbunov <me@tewi.tk>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-payments/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-payments#readme",
  "dependencies": {
    "bluebird": "^3.1.4",
    "bunyan": "^1.7.0",
    "bytes": "^2.1.0",
    "common-errors": "^0.5.3",
    "continuation-local-storage": "^3.1.4",
    "ioredis": "^1.15.0",
    "lodash": "^4.5.1",
    "moment": "^2.11.0",
    "ms-amqp-conf": "^0.2.0",
    "ms-amqp-transport": "^1.3.0",
    "ms-validation": "^1.1.0",
    "mservice": "^1.6.0",
    "node-uuid": "^1.4.6",
    "paypal-rest-sdk": "^1.6.8",
