{
  "name": "ms-payments",
  "description": "Core of the microservice for handling payments",
  "main": "./lib/index.js",
  "scripts": {
    "compile": "babel -d ./lib ./src",
    "pretest": "rimraf ./ss/*; mkdirp ./ss",
    "test": "npm run lint && npm run test:integration",
    "test:integration": "DEBUG=nightmare* mdep test run --custom_run 'xvfb-run --server-args=\\\"-screen 0 1024x1280x24\\\"'",
    "lint": "eslint ./src",
    "start": "node ./bin/mservice.js | ./node_modules/.bin/bunyan -o short",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "docker-release": "mdep docker release --node 8.1.3",
    "release": "yarn && npm run semantic-release; npm run docker-release"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/makeomatic/ms-payments.git"
  },
  "author": "Dmitry Gorbunov <me@tewi.tk>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/makeomatic/ms-payments/issues"
  },
  "homepage": "https://github.com/makeomatic/ms-payments#readme",
  "dependencies": {
    "@microfleet/core": "^9.2.0",
    "@microfleet/transport-amqp": "^10.1.0",
    "bluebird": "^3.4.6",
    "bunyan": "^1.8.1",
    "bytes": "^2.4.0",
    "cluster-key-slot": "^1.0.8",
    "common-errors": "^1.0.2",
    "debug": "^2.6.8",
    "heapdump": "^0.3.9",
    "ioredis": "^3.1.1",
    "lodash": "^4.16.4",
    "moment": "^2.15.1",
    "ms-conf": "^3.1.2",
    "ms-mailer-client": "^6.0.2",
    "ms-mailer-templates": "^1.1.0",
    "ms-validation": "^5.0.1",
    "paypal-rest-sdk": "^1.6.9",
    "redis-filtered-sort": "^2.2.1",
    "request": "^2.81.0",
    "request-promise": "^4.2.1",
    "stdout-stream": "^1.4.0",
    "urlsafe-base64": "^1.0.0",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "@makeomatic/deploy": "^1.11.0",
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.2.3",
    "babel-plugin-istanbul": "^4.1.3",
    "babel-plugin-transform-class-properties": "^6.16.0",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-plugin-transform-strict-mode": "^6.11.3",
    "babel-register": "^6.16.3",
    "codecov": "^2.2.0",
    "cross-env": "^5.0.0",
    "cz-conventional-changelog": "^2.0.0",
    "electron-prebuilt": "^1.4.3",
    "eslint": "^4.1.1",
    "eslint-config-makeomatic": "^1.0.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-mocha": "^4.7.0",
    "eslint-plugin-promise": "^3.5.0",
    "json": "^9.0.4",
    "latest-version-cli": "^1.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.3.0",
    "nightmare": "AVVS/nightmare",
    "nyc": "^11.0.3",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.6",
    "sinon": "^2.3.6"
  },
  "release": {
    "verifyConditions": []
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engine": {
    "node": ">= 7.6.0"
  }
}
